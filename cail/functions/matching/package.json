{
    "name": "cail-matching-function",
    "version": "1.0.0",
    "description": "Cloud Function de Matching Candidato-Oferta (CAIL)",
    "engines": {
        "node": "20"
    },
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "nodemon --watch src --exec ts-node src/index.ts",
        "test": "jest --coverage",
        "deploy": "gcloud functions deploy matching --gen2 --runtime=nodejs20 --trigger-http --entry-point=matching --source=.",
        "seed:offers": "ts-node scripts/seed-offers.ts",
        "regen:offers": "ts-node scripts/regenerate-offer-embeddings.ts",
        "regen:candidates": "ts-node scripts/regenerate-candidate-embeddings.ts",
        "fix:user": "ts-node scripts/fix-user-embedding.ts"
    },
    "keywords": [
        "cail",
        "matching",
        "cloud-functions",
        "microservices"
    ],
    "author": "CAIL Team",
    "license": "MIT",
    "dependencies": {
        "@google-cloud/functions-framework": "^3.3.0",
        "axios": "^1.6.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^6.3.2",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "@google-cloud/vertexai": "^1.1.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/supertest": "^6.0.3",
        "jest": "^30.2.0",
        "nodemon": "^3.0.2",
        "supertest": "^7.2.2",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}