{
    "name": "cail-ofertas-function",
    "version": "1.0.0",
    "description": "Cloud Function de Ofertas Laborales (CAIL)",
    "engines": {
        "node": "20"
    },
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "nodemon --watch src --exec ts-node src/index.ts",
        "test": "jest --coverage",
        "deploy": "gcloud functions deploy ofertas --gen2 --runtime=nodejs20 --trigger-http --entry-point=ofertas --source=."
    },
    "keywords": [
        "cail",
        "ofertas",
        "cloud-functions",
        "microservices"
    ],
    "author": "CAIL Team",
    "license": "MIT",
    "dependencies": {
        "@google-cloud/functions-framework": "^3.3.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "firebase-admin": "^12.0.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.0",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}